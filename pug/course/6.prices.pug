section#prices
	.container
		+gt('','Стоимость обучения:')
		.packets
			.row
				.col-md-4.col-sm-4
					.packet
						.packet-head.packet-head-1
							h4.packet-head-title 
								small пакет
								| "Удостоверение"
						.packet-body
							ul.packet-body-list
								li 
									span.li-bold 93 академических часа (18 недель)
								li 
									span.li-bold 4 модуля, ответы на вопросы (раз в 2 недели)
									span.more-button(data-toggle="modal" data-target="#modal-1") подробнее
