#for
	padding 50px 0
	background-color: #E6D6E7
	overflow hidden
.for-list
	margin-bottom: 90px
	position relative
	z-index 12
	li
		margin-top: 15px
		list-style: none
.for-images
	position relative
	z-index 0
.for-image
	position: absolute
	&-1
		display block
		width 100%
		max-width 618px
		border-radius: 17px
		box-shadow: 0 4px 24px 6px rgba(#4564d3,.49)
		margin 0 0 0 auto 
		float: right 
		top 0
		left 0
		right 0
	&-2
		top -90px
		left -70px
.for-title
	text-align: center
	font-size: 26px
	font-family: OSB
	margin-bottom: 35px
	position relative
	z-index 9
.target
	padding: 25px 25px 25px 95px;
	border-radius: 15px;
	box-shadow: 0px 4px 18.06px 2.94px rgba(2, 2, 2, .38)
	background-color:rgba(255, 255, 255, .7);
	background-repeat: no-repeat;
	background-position: left 15px top 35px;
	min-height: 182px;
	&-text
		line-height: 26px
		span
			font-size: 18px
			font-family: OSB
	&-1
		background-image: url("../img/icons/about-icon-3.png");
	&-2
		background-image: url("../img/icons/about-icon-1.png");