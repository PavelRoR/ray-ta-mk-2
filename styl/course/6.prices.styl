#prices
	padding 50px 0
.packets
	width 100%
	margin 0 auto
.packet
	border-radius: 15px;
	width: 100%;
	max-width: 360px;
	margin: 0 auto 20px;
	box-shadow: 0 4px 10px 3px	rgba(2, 2, 2, .38);
	background-color #fff
	overflow hidden
	&-head
		padding 15px
		&-1
			background-color: #8ba7c2
		&-2
			background-color: #9fd9e1
		&-3
			background-color: #e377a0
		&-title
			text-align: center
			font-size: 20px;
			font-family: OSB
			color: rgb(255, 255, 255);
			text-transform: uppercase
			small
				text-transform: none
				font-size: 16px
				font-family: OS
				display block
				margin-bottom: 5px
	&-body
		padding 20px
		min-height 341px
	&-footer
		padding 0 20px 20px
.packet-body-list
	li
		list-style none
		margin-bottom: 20px
		&:last-child
			margin-bottom: 0
.li-bold
	font-family: CB
.more-button
	display block
	font-size: 16px
	width 80px
	border-bottom: 1px dotted
	color: #aaa
	cursor pointer
.cost
	text-align: center
	font-size: 24px
	margin-bottom: 30px
	font-family: OS
	color: #eb1818
	span
		display block
		font-size: 32px
		font-family: OSB
		margin-top: 10px
.footnotes-text
	font-size: 14px
	margin-bottom:  5px
	&:last-of-type
		margin-bottom: 40px
.cert-img
	display block
	margin 0 auto
	height 188px
	object-fit: cover
	object-position: center
	box-shadow: 0 2px 14px 5px rgba(#4564d3,.2)