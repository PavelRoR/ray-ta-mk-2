#main
	padding 0 0 30px
	background-image url(../img/images/main-img-0.png)
	background-repeat no-repeat
	background-position: left -200px top -150px
	text-align: center
.pre
	font-size: 20px
.main-title
	font-size: 32px
	font-family: CB
	line-height: 40px
	margin 10px 0 30px
.main-info
	font-size: 22px
	display: inline-block
	span
		display: inline-block
		font-family: CB
.video-wrapper-main
	margin 20px auto 0
	max-width 560px
	box-shadow: 0 4px 24px 6px rgba(#4564d3,.49)
#main.remind
	min-height calc(100vh - 137px)
.remind-main-title
	margin 90px 0 20px
	font-size: 30px
	line-height: 1.4
	a
		display: inline-block
		color: #4564d3
		text-decoration: underline
		&:focus
			text-decoration: none
		&:hover
			text-decoration: none
.remind-main-subtitle
	font-size: 26px