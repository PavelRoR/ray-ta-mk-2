#main
	padding 0 0 30px
	background-image url(../img/images/main-img-0.png)
	background-repeat no-repeat
	background-position: left -200px top -150px
	text-align: center
	min-height calc(100vh - 137px)
.pre
	font-size: 20px
.main-title
	font-size: 26px
	font-family: CB
	text-shadow: 0px 4px 20px rgba(114, 238, 255, 0.3);
	margin 10px 0 30px
	line-height: 36px
	span
		font-family: OSB
		color: #4564d3
		display: block
.main-subtitle
	font-size: 24px
	font-family: CB
	margin-top: 40px
.button-thanks
	margin: 60px auto 30px
.switch-date
	display: inline-block
	font-size: 26px
	font-family: OSB
	color #4564d3
@import '../main/10.modal'
@import '../main/11.politics'
.form-promo
	width 100%
	max-width 700px
	margin 0 auto
.inputrow
	// float left
	// margin-right: 30px
	display block
	width 100%
	max-width: 263px;
	margin 0 auto 10px
.intl-tel-input
	width 100%
.bots
	width 100%
	max-width 560px
	margin 20px auto 0
	text-align: center
	&-link
		display: inline-block
		width 25%
		color: #ffffff
		font-size: 14px
		padding 10px 5px
		transition: all .4s ease
		&-vk
			background-color: #4D75A3
		&-tg
			background-color: #11AADF
		&-wa
			background-color: #0CB40C
		&-ok
			background-color: #FF9802
		&:focus
			text-decoration: none
			color #fff
		&:hover
			text-decoration: none
			color: #fff
			transform: translateY(-4px)
		.fa
			display block
			font-size: 24px
			margin-bottom: 2px