#about
	padding 40px 0 26px
	background-color: #E6D6E7
	overflow hidden
.about-list
	margin-bottom: 90px
	li
		margin-top: 30px
		list-style: none
.about-images
	position relative
	z-index 0
.about-image
	position: absolute
	&-1
		display block
		width 100%
		max-width 618px
		border-radius: 17px
		box-shadow: 0 4px 24px 6px rgba(#4564d3,.49)
		margin 0 0 0 auto 
		float: right 
		top 0
		left 0
		right 0
	&-2
		top -90px
		left -70px
.about-item
	padding 35px 15px 15px 95px
	border-radius: 15px;
	box-shadow: 0px 4px 18.06px 2.94px rgba(2, 2, 2, 0.38);
	background-color: rgba(#fff,.7)
	background-repeat no-repeat
	background-position: left 15px top 35px
	min-height 200px
	&-1
		background-image url(../img/icons/about-icon-1.png)
	&-2
		background-image url(../img/icons/about-icon-2.png)
	&-3
		background-image url(../img/icons/about-icon-3.png)
	&-title
		font-size: 20px
		font-family: OSB
		margin-bottom: 10px